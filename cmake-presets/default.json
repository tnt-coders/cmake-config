{
    "version": 7,
    "configurePresets": [
        {
            "name": "default-base",
            "hidden": true,
            "generator": "Ninja"
        },
        {
            "name": "default-debug",
            "hidden": true,
            "inherits": [
                "default-base"
            ],
            "displayName": "Debug",
            "description": "Default settings for debug build configuration",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "default-release",
            "hidden": true,
            "inherits": [
                "default-base"
            ],
            "displayName": "Release",
            "description": "Default settings for release build configuration",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "default-clang-tidy",
            "hidden": true,
            "inherits": [
                "default-release"
            ],
            "displayName": "Clang-Tidy",
            "description": "Release build with compile commands for clang-tidy",
            "binaryDir": "${sourceDir}/build/clang-tidy",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_CLANG_TIDY": "clang-tidy"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default-debug",
            "hidden": true,
            "configuration": "Debug"
        },
        {
            "name": "default-release",
            "hidden": true,
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "default-debug",
            "hidden": true,
            "configuration": "Debug"
        },
        {
            "name": "default-release",
            "hidden": true,
            "configuration": "Release"
        }
    ]
}
